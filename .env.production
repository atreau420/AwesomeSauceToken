# Production Environment Configuration
# Copy to .env and fill in actual values for production deployment

# --- Required Blockchain Keys ---
PRIVATE_KEY=your_wallet_private_key_here
WALLET_ADDRESS=your_wallet_address_here

# --- RPC URLs (Use production endpoints) ---
ETH_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# --- Trading Bot Settings ---
MIN_MICRO_ROI_BPS=25
DAILY_GAS_CAP_ETH=0.02
DEFAULT_SLIPPAGE_BPS=50
ETH_PRICE_USD=3000

# --- Production Server Config ---
NODE_ENV=production
PORT=443
HTTPS_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/your_cert.pem
SSL_KEY_PATH=/etc/ssl/private/your_key.pem

# --- Security Settings ---
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
SESSION_SECRET=generate_a_strong_session_secret_here
RATE_LIMIT_ENABLED=true

# --- Marketplace Treasury (CRITICAL - Set to your treasury wallet) ---
MARKETPLACE_TREASURY=your_treasury_wallet_address_here

# --- Database ---
MARKETPLACE_DB_FILE=/var/lib/awesomesauce/marketplace.db

# --- AI Agent Intervals ---
AI_MAINTENANCE_INTERVAL_MS=300000
AI_TREASURY_INTERVAL_MS=600000
AI_GAME_INTERVAL_MS=900000

# --- Optional: Monitoring ---
SENTRY_DSN=your_sentry_dsn_for_error_tracking
LOG_LEVEL=info